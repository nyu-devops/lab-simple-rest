{
	"name": "Simple REST",
	"image": "rofrano/nyu-devops-base:fa23",
	"workspaceFolder": "/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=delegated",
	"remoteUser": "vscode",
    "runArgs": ["-h","nyu"],
    "remoteEnv": {
		"FLASK_APP": "app.py",
    	"FLASK_DEBUG": "True"
    },
	"customizations": {
        "vscode": {
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"editor.formatOnSave": true
				},
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"markdown-preview-github-styles.colorTheme": "light",
				"files.exclude": {
					"**/.git": true,
					"**/.DS_Store": true,
					"**/*.pyc": true,
					"**/__pycache__": true,
					"**/.pytest_cache": true
				}
			},
            "extensions":[
				"ms-python.python", 
				"ms-python.pylint",
				"njpwerner.autodocstring",
				"yzhang.markdown-all-in-one",
				"bierner.github-markdown-preview",
				"hnw.vscode-auto-open-markdown-preview",
				"DavidAnson.vscode-markdownlint",
				"rangav.vscode-thunder-client"
			]
        }
    },
	"postCreateCommand": "sudo pip install -r requirements.txt",
	"forwardPorts": [8000]

	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	// "features": {},
}
